<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.codeclan.wordyapp.MemoryGameActivity">

    <TextView
        android:id="@+id/no_words_message"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:text="No words yet!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/current_word"
        android:fontFamily="roboto-bold"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="#000000"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:text="Test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/current_definition"
        android:layout_marginTop="20dp"
        android:fontFamily="serif-monospace"
        android:textStyle="italic"
        android:textSize="40dp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/reveal_button"
        android:layout_marginTop="200dp"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:onClick="onClickRevealButton"
        android:hint="Reveal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
