<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.codeclan.wordyapp.NewWordActivity">

    <TextView
        android:id="@+id/enter_new_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Enter a new word: "/>

    <EditText
        android:id="@+id/new_word_name"
        android:hint="Enter a new word: "
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/enter_new_definition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Enter a new word: "/>

    <EditText
        android:layout_gravity="center"
        android:hint="Enter a new definition"
        android:id="@+id/new_word_definition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/add_word_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickAddWordButton"
        android:layout_gravity="center"
        android:hint="Add"
        />

</LinearLayout>
